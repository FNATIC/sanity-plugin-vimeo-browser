{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "es5"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react",
    "outDir": "./lib",
  },
  "exclude": ["node_modules"],
  "include": [
    "./src",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.css",
  ]
}